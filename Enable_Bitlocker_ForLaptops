#This is meant for disabling Bitlocker on Laptops only#
#The script can be ran using a CSV, you'll just have to add the parameter(s)#
**This part is subjective and does not have exist**#-If you've named your workstations in such a way to easily identify if a laptopr or desktop#
#Step 1.0-Request a workstation's hostname#
#Step 2.0-Request workstation OS
#Step 3.0-Request TPM Ready status#
#Step 4.0-Request Bitlocker Protection status#
#Step 4.1-Only run when step 4.0 succeeds, Enable Protection#
#Step 4.a-Only run when Step 4.0 fails, stop script#
#Step 3.a-Only run when Step 3.0 fails, stop script#
#Step 2.a-Only run when Step 2.0 fails, stop script#
#Step 1.a-Only run when Step 1.0 fails, stop script#

Step 1.0    If((Get-WmiObject Win32_Computersystem).name -like 'hostname')
Step 2.0        {If((Get-WmiObject win32_operatingsystem).Caption -like '*Windows 10*')
Step 3.0            {If((Get-Tpm).TpmReady -eq 'True')
Step 4.0                {If((Get-BitLockerVolume).ProtectionStatus -ne 'On')
Step 4.1                    {Enable-BitLocker -MountPoint 'c:' -EncryptionMethod XtsAes128 -UsedSpaceOnly -RecoveryPasswordProtector}
Step 4.a                Else{'Bitlocker is Already Enabled'}}
Step 3.a            Else{'TPM is not Enabled'}}
Step 2.a        Else{'OS is not compatible'}}
Step 1.a    Else{'Workstation is not a Laptop'}


 
